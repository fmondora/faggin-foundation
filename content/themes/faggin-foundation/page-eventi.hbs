{{!< default}}

<article class="page-eventi">
    <header class="page-header">
        <div class="container">
            <h1>Eventi</h1>
            <p class="page-intro">Conferenze, festival e incontri a cui Federico Faggin ha partecipato o partecipera'.</p>
        </div>
    </header>

    <div class="container">
        {{!-- Ghost page content --}}
        {{#if content}}
            <div class="content-body">
                {{content}}
            </div>
        {{/if}}

        {{!-- Eventi Futuri --}}
        <section class="events-section">
            <h2>Prossimi Eventi</h2>
            <div class="events-list">
                <p class="events-placeholder">Nuovi eventi in arrivo. Iscriviti alla newsletter per restare aggiornato.</p>
            </div>
        </section>

        {{!-- Eventi Passati --}}
        <section class="events-section">
            <h2>Eventi Passati</h2>
            <div class="events-list">
                <div class="event-item">
                    <div class="event-date">
                        <span>Mar 2025</span>
                    </div>
                    <div class="event-details">
                        <h4>Presentazione documentario RAI &ldquo;L'uomo che vide il futuro&rdquo;</h4>
                        <p class="event-location">Camera dei Deputati, Roma</p>
                    </div>
                    <div class="event-action">
                        <a href="#" class="btn btn-small">RaiPlay</a>
                    </div>
                </div>

                <div class="event-item">
                    <div class="event-date">
                        <span>2024</span>
                    </div>
                    <div class="event-details">
                        <h4>The Science of Consciousness Conference</h4>
                        <p class="event-location">Barcellona</p>
                    </div>
                </div>

                <div class="event-item">
                    <div class="event-date">
                        <span>2024</span>
                    </div>
                    <div class="event-details">
                        <h4>Presentazione &ldquo;Oltre l'Invisibile&rdquo;</h4>
                        <p class="event-location">Da confermare</p>
                    </div>
                </div>

                <div class="event-item">
                    <div class="event-date">
                        <span>Mag 2019</span>
                    </div>
                    <div class="event-details">
                        <h4>Wired Next Fest</h4>
                        <p class="event-location">Milano</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</article>

