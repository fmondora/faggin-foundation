{{!< default}}

<article class="page-content">
    {{#if @page.show_title_and_feature_image}}
    <header class="page-header">
        <div class="container">
            <h1>{{title}}</h1>
        </div>
    </header>
    {{#if feature_image}}
        <figure class="post-feature-image">
            <img src="{{feature_image}}" alt="{{title}}">
        </figure>
    {{/if}}
    {{/if}}
    <div class="container">
        <div class="content-body">
            {{content}}
        </div>
    </div>
</article>
